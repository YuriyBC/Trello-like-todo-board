{
  "compilerOptions": {
    "outDir": "./build/",
    "sourceMap": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "module": "esnext",
    "target": "es5",
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "suppressImplicitAnyIndexErrors": true,
    "isolatedModules": true
  },
  "typeRoots": [
    "../node_modules/@types",
    "lib"
  ],
  "include": [
    "./src/**/*"
  ]
}
